# ============================================================
# ERP INLAUDO - Variáveis de Ambiente
# ============================================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha com suas credenciais reais
# 3. NUNCA versione o arquivo .env no Git
# ============================================================

# ============================================================
# BANCO DE DADOS
# ============================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=seu_banco_de_dados
DB_USER=seu_usuario
DB_PASS=sua_senha
DB_CHARSET=utf8mb4

# ============================================================
# APLICAÇÃO
# ============================================================
APP_NAME="ERP INLAUDO"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://erp.inlaudo.com.br
APP_KEY=

# ============================================================
# TIMEZONE E LOCALE
# ============================================================
TIMEZONE=America/Sao_Paulo
DEFAULT_LOCALE=pt_BR
DEFAULT_CURRENCY=BRL

# ============================================================
# EMAIL (SMTP)
# ============================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.hostgator.com
MAIL_PORT=465
MAIL_USERNAME=seu_email@dominio.com
MAIL_PASSWORD=sua_senha_email
MAIL_FROM_ADDRESS=noreply@inlaudo.com.br
MAIL_FROM_NAME="ERP INLAUDO"
MAIL_ENCRYPTION=ssl

# ============================================================
# INTEGRAÇÃO ASAAS
# ============================================================
ASAAS_API_KEY=
ASAAS_ENVIRONMENT=production
ASAAS_WEBHOOK_TOKEN=

# ============================================================
# INTEGRAÇÃO MERCADO PAGO
# ============================================================
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# ============================================================
# INTEGRAÇÃO STRIPE
# ============================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=

# ============================================================
# INTEGRAÇÃO CORA
# ============================================================
CORA_API_KEY=
CORA_ACCOUNT_ID=
CORA_WEBHOOK_SECRET=

# ============================================================
# SEGURANÇA
# ============================================================
SESSION_LIFETIME=120
PASSWORD_HASH_COST=10

# ============================================================
# LOGS
# ============================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ============================================================
# UPLOADS
# ============================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# ============================================================
# MODO MANUTENÇÃO
# ============================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema em manutenção. Tente novamente em breve."
